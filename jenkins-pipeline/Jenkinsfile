pipeline {
    agent {
        label 'jenkins-jenkins-agent'
    }
    stages {
        stage('Checkout from SCM'){
            steps {
                git branch: 'task-6', url: 'https://github.com/kitakiv/rsschool-devops-course-tasks/'
            }
        }
        stage('Install python') {
            steps {
                sh '''
                sudo apt-get update
                sudo apt-get install -y python3 python3-pip
                python3 --version
                pip3 --version
                '''
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'pip install -r ./jenkins-pipeline/app/requirements.txt'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}